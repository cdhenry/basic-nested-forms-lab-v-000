<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :quantity %>
    <%= i.text_field :quantity %><br>

    <%= i.label :name %>
    <%= i.text_field :name %><br>

    <%= i.label :ingredient_3 %>
    <%= i.text_field :ingredient_3 %><br>

    <%= i.label :ingredient_4 %>
    <%= i.text_field :ingredient_4 %><br>

    <%= i.label :ingredient_5 %>
    <%= i.text_field :ingredient_5 %><br>

    <%= i.label :ingredient_6 %>
    <%= i.text_field :ingredient_6 %><br>
  <% end %>

  <%= f.submit %>
<% end %>
